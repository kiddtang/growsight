# Supabase Configuration
VITE_SUPABASE_URL=your_supabase_project_url
VITE_SUPABASE_ANON_KEY=your_supabase_anon_key

# Email Configuration
VITE_EMAIL_PROVIDER=smtp
VITE_EMAIL_FROM_NAME=Growsight
VITE_EMAIL_FROM_ADDRESS=noreply@yourdomain.com

# SMTP Configuration
VITE_SMTP_HOST=smtp.yourdomain.com
VITE_SMTP_PORT=587
VITE_SMTP_SECURE=false
VITE_SMTP_USERNAME=your_smtp_username
VITE_SMTP_PASSWORD=your_smtp_password

# Alternative Email Providers
# VITE_EMAIL_PROVIDER=sendgrid
# VITE_SENDGRID_API_KEY=your_sendgrid_api_key

# VITE_EMAIL_PROVIDER=mailgun
# VITE_MAILGUN_API_KEY=your_mailgun_api_key
# VITE_MAILGUN_DOMAIN=yourdomain.com

# VITE_EMAIL_PROVIDER=aws-ses
# VITE_AWS_ACCESS_KEY_ID=your_aws_access_key
# VITE_AWS_SECRET_ACCESS_KEY=your_aws_secret_key
# VITE_AWS_REGION=us-east-1

# Application Configuration
VITE_APP_NAME=Growsight
VITE_APP_URL=http://localhost:3000
VITE_SUPPORT_EMAIL=support@yourdomain.com

# Feature Flags
VITE_ENABLE_EMAIL_NOTIFICATIONS=true
VITE_ENABLE_PDF_EXPORTS=true
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_REALTIME=true
VITE_ENABLE_ADVANCED_REPORTING=true

# Security
VITE_SESSION_TIMEOUT=3600000
VITE_MAX_FILE_SIZE=10485760
VITE_PASSWORD_MIN_LENGTH=8
VITE_MAX_LOGIN_ATTEMPTS=5

# Example:
# VITE_SUPABASE_URL=https://your-project.supabase.co
# VITE_SUPABASE_ANON_KEY=your-anon-key-here